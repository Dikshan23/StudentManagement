@model List<StudentManagement.Models.Student>

<div class="container mt-4">
    <h2 class="mb-3">Student List</h2>

    <a href="/Student/Create" class="btn btn-primary mb-3">Add New Student</a>

    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Age</td>
                </tr>
            }
        </tbody>
    </table>
</div>
